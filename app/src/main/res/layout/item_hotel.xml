<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hotel_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starlight Resort Hotel - Kids Concept Premium Large"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tag_cg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/trip_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Туда 17.09 пн · Обратно 27.09 пн ·  Ночей 10"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/min_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="от 136 950 ₽ за 2-х"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>